<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- MAINTENANCE LIST VIEW -->
    <record id="view_maintenance_list" model="ir.ui.view">
        <field name="name">fleetflow.maintenance.list</field>
        <field name="model">fleetflow.maintenance</field>
        <field name="arch" type="xml">
            <list string="Maintenance Logs"
                  decoration-bf="state == 'open'"
                  decoration-success="state == 'done'">
                <field name="name" string="Service"/>
                <field name="vehicle_id"/>
                <field name="maintenance_type"/>
                <field name="date"/>
                <field name="date_completed"/>
                <field name="cost" string="Cost"/>
                <field name="vendor"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- MAINTENANCE FORM VIEW -->
    <record id="view_maintenance_form" model="ir.ui.view">
        <field name="name">fleetflow.maintenance.form</field>
        <field name="model">fleetflow.maintenance</field>
        <field name="arch" type="xml">
            <form string="Service Log">
                <header>
                    <button name="action_complete" string="Mark Service Done"
                            type="object" class="btn-primary"
                            invisible="state == 'done'"
                            confirm="Mark complete? Vehicle will be set back to Available."/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="open,done"/>
                </header>
                <sheet>
                    <div class="alert alert-info" role="alert"
                         invisible="state == 'done'">
                        <strong>Auto-Logic Active:</strong>
                        This vehicle has been automatically set to In Shop
                        and is hidden from the Trip Dispatcher.
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Service Description (e.g. Oil Change)"/></h1>
                    </div>
                    <group>
                        <group string="Service Details">
                            <field name="vehicle_id"
                                   readonly="state == 'done'"
                                   options="{'no_create': True}"/>
                            <field name="maintenance_type"/>
                            <field name="date" readonly="state == 'done'"/>
                            <field name="date_completed" readonly="1"/>
                        </group>
                        <group string="Cost and Vendor">
                            <field name="cost"/>
                            <field name="vendor"/>
                            <field name="odometer_at_service"/>
                        </group>
                    </group>
                    <group string="Technician Notes">
                        <field name="notes" nolabel="1"
                               placeholder="Describe the service performed, parts replaced..."/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- MAINTENANCE SEARCH VIEW -->
    <record id="view_maintenance_search" model="ir.ui.view">
        <field name="name">fleetflow.maintenance.search</field>
        <field name="model">fleetflow.maintenance</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="vendor"/>
                <separator/>
                <filter name="open" string="In Progress"
                        domain="[('state','=','open')]"/>
                <filter name="done" string="Completed"
                        domain="[('state','=','done')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_vehicle" string="Vehicle"
                            context="{'group_by':'vehicle_id'}"/>
                    <filter name="group_type" string="Service Type"
                            context="{'group_by':'maintenance_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_maintenance" model="ir.actions.act_window">
        <field name="name">Maintenance Logs</field>
        <field name="res_model">fleetflow.maintenance</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_open': 1}</field>
    </record>

</odoo>
